<!DOCTYPE html>
<html>
<head>
  <title>ChristmasList</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%=link_to image_tag("logo.png", style:"height:200%; width:110%"), root_path, {:class => "navbar-brand"} %>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li class="btn"><%= link_to "Gifts", gifts_path %></li>
        <li class="btn"><%= link_to "People", people_path%></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="btn"><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
        <li class="btn"><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
      </ul>
    </div>
  </div>
</nav> 

<div class="container-fluid">
  <div class="well">
    <%= yield %>
  </div>
</div>
</body>
</html>
